<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="这是另一个应用中的数据"
        />

    <Button
        android:id="@+id/add_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="向远端添加数据(in)"
        />

    <Button
        android:id="@+id/add_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="向远端添加数据(out)"
        />


    <Button
        android:id="@+id/add_inout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="向远端添加数据(inout)"
        />


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取远端数据"
        />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="序列号:"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取序列号"
        />

</LinearLayout>
